---
import FirstCard from '../components/linkedin/FirstCard.astro';
import SecondCard from '../components/linkedin/SecondCard.astro';
import ThirdCard from '../components/linkedin/ThirdCard.astro';
---
<div class="bg-violet-200 border-t-2 border-black">
<section class="mx-auto max-w-screen-lg bg-violet-200 px-4 pb-12 pt-12 sm:px-6 lg:px-8">
  <div class="flex items-center space-x-2">
    <h3 class="mb-4 mt-3 text-2xl font-bold leading-6 text-black font-sans group-hover:text-black md:text-2xl xl:text-3xl">
      Recursos destacados
    </h3>
  </div>
  <div class="mx-auto grid grid-cols-1 gap-x-4 gap-y-4 md:grid-cols-2 lg:mx-0 lg:max-w-none lg:grid-cols-3">
    <FirstCard />
    <SecondCard />
    <ThirdCard />
  </div>
</section>
</div>