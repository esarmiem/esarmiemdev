---
import { Image } from "astro:assets";
import youtube from "@config/youtube.json";
---

<section class="max-w-screen-lg px-4 mx-auto pb-12 sm:px-6 lg:px-8">
  <h3
    class="mt-3 text-lg md:text-2xl font-semibold leading-6 text-gray-900 group-hover:text-gray-600 mb-4"
  >
    Latest videos on YouTube:
  </h3>
  <ul
    class="mx-auto grid grid-cols-1 md:grid-cols-2 gap-x-4 gap-y-4 lg:mx-0 lg:max-w-none lg:grid-cols-3 text-white"
  >
    {
      youtube?.slice(0, 3).map((item) => (
        <li>
          <a
            href={`https://www.youtube.com/watch?v=${item.videoId}`}
            target="_blank"
            class="relative top-0 block overflow-hidden rounded-2xl"
          >
            <figure>
              <Image
                alt={item.title}
                src={`https://i.ytimg.com/vi/${item.videoId}/maxresdefault.jpg`}
                class="h-44 w-full object-cover"
                width={309}
                height={176}
                decoding="async"
                loading="lazy"
              />
            </figure>
            <div class="bg-gray-900 p-4">
              <span class="text-sm">{item.channelTitle}</span>
              <p class="mt-1 text-xs text-gray-400 h-8">{item.title}</p>
            </div>
          </a>
        </li>
      ))
    }
  </ul>
</section>
